package myio;

import java.io.*;

public class MyFile {

    /**
     * Xuất dữ liệu ra file nhị phân
     * 
     * @param filename tên của file cần ghi dữ liệu
     * @param n số lượng bản ghi
     * @throws IOException
     */
    public static void binaryOutputFile(String filename, int n) throws IOException {
        try (FileOutputStream outf = new FileOutputStream(filename);
             DataOutputStream out = new DataOutputStream(outf)) {

            out.writeInt(n); // Số lượng bản ghi trợ giúp đọc

            
        }
    }

